{% block cokiban %}
    <div id="cokiban" data-x-data="cokibanBanner" data-x-bind="bindCokiban" data-cokiban-config="{{ cokiban.config }}" data-cokiban-cookies="{{ cokiban.cookies }}" data-cokiban-label-switch-true="{{ cokiban.translation.banner.switch_true }}" data-cokiban-label-switch-false="{{ cokiban.translation.banner.switch_false }}">
        <template data-x-bind="bindBanner">
            {% block banner %}
                <div class="cokiban__wrapper cokiban__banner">
                    <div class="cokiban__container">
                        <div class="cokiban__header">
                            {% block banner_header %}
                                <svg class="cokiban__header__icon" height="32" width="32" aria-hidden="true">
                                    <use xlink:href="#icon-cokiban-header"></use>
                                </svg>
                                <div class="cokiban__header__title">
                                    <span data-x-show="showOverview">{{ cokiban.translation.banner.main_headline }}</span>
                                    <span data-x-show="showDetails">{{ cokiban.translation.banner.details_headline }}</span>
                                </div>
                                <button class="cokiban__header__back cokiban__button cokiban__button--link" title="{{ cokiban.translation.banner.details_back_link_title }}" data-x-bind="bindBackButton">{{ cokiban.translation.banner.details_back_link_text }}</button>
                            {% endblock %}
                        </div>
                        <template data-x-if="showOverview">
                            <div class="cokiban__body">
                                {% block banner_body_overview %}
                                    <p class="cokiban__body__text">{{ cokiban.translation.banner.main_text|insert_tag|raw }}</p>
                                    <div class="cokiban__checkboxes">
                                        <div class="cokiban__checkbox cokiban__checkbox--checked">
                                            <input type="checkbox" name="cokibanCookieMandatory" id="cokibanCookieMandatory" checked disabled>
                                            <label for="cokibanCookieMandatory">{{ cokiban.translation.groups.mandatory.headline }}</label>
                                        </div>
                                        {% for groupKey, group in cokiban.groups %}
                                            <div class="cokiban__checkbox">
                                                <input type="checkbox" name="cokibanCheckbox{{ groupKey|capitalize }}" id="cokibanCheckbox{{ groupKey|capitalize }}" data-x-bind="bindSwitch" data-cokiban-cookie="{{ groupKey }}">
                                                <label for="cokibanCheckbox{{ groupKey|capitalize }}">{{ cokiban.translation.groups[groupKey].headline }}</label>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endblock %}
                            </div>
                        </template>
                        <template data-x-if="showDetails">
                            <div class="cokiban__body">
                                {% block banner_body_details %}
                                    <div class="cokiban__group">
                                        <p class="cokiban__group__title">
                                            <strong>{{ cokiban.translation.groups.mandatory.headline }}</strong>
                                        </p>
                                        <p class="cokiban__group__text">{{ cokiban.translation.groups.mandatory.text }}</p>
                                    </div>
                                    {% for groupKey, group in cokiban.groups %}
                                        <div class="cokiban__group">
                                            <p class="cokiban__group__title">
                                                <strong>{{ cokiban.translation.groups[groupKey].headline }}</strong>
                                            </p>
                                            <p class="cokiban__group__text">{{ cokiban.translation.groups[groupKey].text }}</p>
                                            <div class="cokiban__switch">
                                                <input type="checkbox" name="cokibanSwitch{{ groupKey|capitalize }}" id="cokibanSwitch{{ groupKey|capitalize }}" data-x-bind="bindSwitch" data-cokiban-cookie="{{ groupKey }}">
                                                <label for="cokibanSwitch{{ groupKey|capitalize }}">
                                                    <span class="cokiban__invisible">{{ cokiban.translation.groups[groupKey].headline }}</span>
                                                    <span data-x-bind="bindSwitchLabel" data-cokiban-cookie="{{ groupKey }}"></span>
                                                </label>
                                            </div>
                                            {% for cookieKey, cookie in group %}
                                                <div class="cokiban__cookie">
                                                    <p class="cokiban__cookie__title">
                                                        <strong>{{ cokiban.translation.cookies[cookieKey].headline }}</strong>
                                                    </p>
                                                    <p class="cokiban__cookie__title__text">{{ cokiban.translation.cookies[cookieKey].text|insert_tag|raw }}</p>
                                                    <div class="cokiban__switch">
                                                        <input type="checkbox" name="cokibanSwitch{{ groupKey|capitalize ~ cookieKey|capitalize }}" id="cokibanSwitch{{ groupKey|capitalize ~ cookieKey|capitalize }}" data-x-bind="bindSwitch" data-cokiban-cookie="{{ groupKey ~ cookieKey|capitalize }}">
                                                        <label for="cokibanSwitch{{ groupKey|capitalize ~ cookieKey|capitalize }}">
                                                            <span class="cokiban__invisible">{{ cokiban.translation.cookies[cookieKey].headline }}</span>
                                                            <span data-x-bind="bindSwitchLabel" data-cokiban-cookie="{{ groupKey ~ cookieKey|capitalize }}"></span>
                                                        </label>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    {% endfor %}
                                {% endblock %}
                            </div>
                        </template>
                        <div class="cokiban__buttons">
                            {% block banner_buttons %}
                                <button class="cokiban__button" title="{{ cokiban.translation.banner.save_button_title }}" data-x-bind="bindSaveSettings">{{ cokiban.translation.banner.save_button_text }}</button>
                                <button class="cokiban__button cokiban__button--accept" title="{{ cokiban.translation.banner.accept_button_title }}" data-x-bind="bindAcceptAll">{{ cokiban.translation.banner.accept_button_text }}</button>
                            {% endblock %}
                        </div>
                        <div class="cokiban__footer">
                            {% block banner_footer %}
                                {% if cokiban.translation.banner.footer_links %}
                                    <ul>
                                        {% for link in cokiban.translation.banner.footer_links %}
                                            <li>{{ link|insert_tag|raw }}</li>
                                        {% endfor %}
                                        <li data-x-show="showOverview">
                                            <button class="cokiban__button cokiban__button--link" title="{{ cokiban.translation.banner.details_link_title }}" data-x-bind="bindDetailsButton">{{ cokiban.translation.banner.details_link_text }}</button>
                                        </li>
                                    </ul>
                                {% else %}
                                    {{ cokiban.translation.banner.footer_text }}
                                    <button class="cokiban__button cokiban__button--link" title="{{ cokiban.translation.banner.details_link_title }}" data-x-bind="bindDetailsButton">{{ cokiban.translation.banner.details_link_text }}</button>
                                {% endif %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            {% endblock %}
        </template>
        <template data-x-bind="bindHint">
            {% block hint %}
                <div class="cokiban__wrapper cokiban__hint">
                    <div class="cokiban__container">
                        <div class="cokiban__header">
                            {% block hint_header %}
                                <svg class="cokiban__header__icon" height="32" width="32" aria-hidden="true">
                                    <use xlink:href="#icon-cokiban-header"></use>
                                </svg>
                                <div class="cokiban__header__title">
                                    <span data-x-show="showOverview">{{ cokiban.translation.banner.main_headline }}</span>
                                    <span data-x-show="showDetails">{{ cokiban.translation.banner.details_headline }}</span>
                                </div>
                                <button class="cokiban__header__back cokiban__button cokiban__button--link" title="{{ cokiban.translation.banner.details_back_link_title }}" data-x-bind="bindBackButton">{{ cokiban.translation.banner.details_back_link_text }}</button>
                            {% endblock %}
                        </div>
                        <div class="cokiban__body">
                            {% block hint_body %}
                                <p class="cokiban__body__text" data-x-bind="bindHintText"></p>
                            {% endblock %}
                        </div>
                        <div class="cokiban__buttons">
                            {% block hint_buttons %}
                                <button class="cokiban__button cokiban__button--small" title="{{ cokiban.translation.banner.close_button_title }}" data-x-bind="bindCloseHint">{{ cokiban.translation.banner.close_button_text }}</button>
                                <button class="cokiban__button cokiban__button--accept" data-x-bind="bindAcceptHint">Accept</button>
                            {% endblock %}
                        </div>
                    </div>
                </div>
            {% endblock %}
        </template>
        {% block sprite %}
            <svg class="cokiban__sprite" height="0" width="0" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <symbol id="icon-cokiban-header" viewBox="0 0 32 32">
                        <path d="m12.29 7.67a3.2 3.2 0 1 0 3.19 3.2 3.2 3.2 0 0 0 -3.19-3.2zm0 4.87a1.68 1.68 0 1 1 1.71-1.67 1.68 1.68 0 0 1 -1.71 1.67z"></path>
